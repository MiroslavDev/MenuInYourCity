<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frg_shares_scroll_view"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/frg_shares_btn_subscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_item_height"
            android:background="@drawable/follow_btn_selector">

            <TextView
                android:id="@+id/frg_shares_btn_subscribe_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:text="@string/subscribe_on_push"
                android:textColor="@color/text_color_white"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <com.miroslav.menuinyourcity.view.ListViewOnFullScreen
            android:id="@+id/frg_shares_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frg_shares_btn_subscribe" />

    </RelativeLayout>
</ScrollView>