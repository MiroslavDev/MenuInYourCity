<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:paddingLeft="@dimen/xxxxlarg_padding"
        android:paddingTop="@dimen/xlarge_padding"
        android:paddingRight="@dimen/xxxxlarg_padding"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_call_24dp"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8(800) 023-23-43"
        android:textSize="20sp"
        android:id="@+id/frg_splash_number_tel"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color_actbar"
        android:layout_below="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_text"
        android:textSize="20sp"
        android:id="@+id/frg_splash_text"
        android:layout_below="@+id/frg_splash_number_tel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/xlarge_padding"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_white"
        android:alpha="0.6"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" />
</RelativeLayout>