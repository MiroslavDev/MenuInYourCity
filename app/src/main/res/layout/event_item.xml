<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.miroslav.menuinyourcity.view.CategorieItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_xsmall" >

        <ImageView
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height"
            android:id="@+id/event_item_image"
            android:scaleType="fitXY" />

    </com.miroslav.menuinyourcity.view.CategorieItemView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standart_text_size"
            android:textColor="@color/main_orange"
            tools:text="22 марта, 10:10"
            android:id="@+id/event_item_data"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/padding_xsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_green"
            android:textSize="@dimen/title_text_size"
            tools:text="В Астане прошло событие"
            android:id="@+id/event_item_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/event_item_data" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/cat_text_size"
            tools:text="Ssbfkjsdbfsdbfsd sdifg sdifgs dfisgdf sidfg fsdbfsd sdifg sdifgs dfisgdf sidfg fsdbfsd sdifg sdifgs dfisgdf sidfg isd gf isdgfsgdf"
            android:id="@+id/event_description"
            android:ellipsize="end"
            android:paddingTop="@dimen/padding_xsmall"
            android:paddingBottom="@dimen/padding_xsmall"
            android:paddingRight="@dimen/padding_xsmall"
            android:layout_marginBottom="@dimen/padding_xsmall"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/event_item_name"
            android:maxLines="3" />

    </RelativeLayout>

</LinearLayout>