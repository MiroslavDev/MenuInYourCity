<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_actionbar"
    android:layout_height="@dimen/actionbar_height"
    android:layout_width="match_parent"
    android:background="@color/main_green">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:id="@+id/menu_actbar_btn"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_small">

        <ImageView
            android:layout_width="@dimen/icn_height_actbar"
            android:layout_height="@dimen/icn_height_actbar"
            android:src="@drawable/map_marker"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_title_actbar"
            android:text="@string/default_city"
            android:textSize="@dimen/menu_title_size_actbar"
            android:textColor="@color/text_color_actbar"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size_actbar"
        android:textStyle="bold"
        android:textColor="@color/text_color_actbar"
        android:text="@string/app_name"
        android:id="@+id/title_actbar"
        android:layout_centerInParent="true" />

    <View android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/actionbar_shadow"
        android:layout_alignParentBottom="true" />

</RelativeLayout>