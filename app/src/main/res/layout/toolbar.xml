<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_actionbar"
    android:layout_height="@dimen/actionbar_height"
    android:layout_width="match_parent"
    android:background="@color/main_green">

    <LinearLayout
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:id="@+id/menu_actbar_btn"
        android:layout_marginLeft="@dimen/padding_xsmall">

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/map_marker"-->
            <!--android:id="@+id/menu_actbar_btn_icon"-->
            <!--android:layout_gravity="center_vertical" />-->

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_xsmall"
            android:background="@android:color/transparent"
            android:dropDownWidth="220dp"
            android:id="@+id/menu_actbar_btn_icon"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_title_actbar"
            android:textSize="@dimen/menu_title_size_actbar"
            android:textColor="@color/text_color_actbar"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_text_size_actbar"
        android:textStyle="bold"
        android:textColor="@color/text_color_actbar"
        android:text="@string/default_city"
        android:id="@+id/title_actbar"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="@dimen/item_height"
        android:layout_height="@dimen/item_height"
        android:src="@drawable/ic_button_back"
        android:id="@+id/btn_back_actbar"
        android:layout_marginLeft="@dimen/padding_xsmall"
        android:padding="@dimen/padding_xsmall"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_xxsmall"
        android:src="@drawable/actionbar_shadow"
        android:layout_alignParentBottom="true" />

</RelativeLayout>