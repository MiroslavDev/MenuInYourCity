<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.miroslav.menuinyourcity.view.CategorieItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_xsmall" >

        <ImageView
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height"
            android:id="@+id/shop_item_image"
            android:src="@drawable/bigbang"
            android:scaleType="fitXY" />

    </com.miroslav.menuinyourcity.view.CategorieItemView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@android:color/black"
            tools:text="Пиццерия Новая"
            android:id="@+id/shop_item_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/padding_xsmall"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/shop_item_favourits" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standart_text_size"
            tools:text="Пиццерия Новая"
            android:id="@+id/shop_item_street"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/shop_item_name"
            android:layout_toLeftOf="@+id/shop_item_favourits" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cat_text_size"
            android:text="@string/time_work"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_above="@+id/shop_item_work_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standart_text_size"
            android:textColor="@android:color/black"
            tools:text="С 10:00 до 23:00"
            android:id="@+id/shop_item_work_time"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/padding_xsmall"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/standart_text_size"
            android:textColor="@android:color/black"
            tools:text="Рейтинг: 0.0"
            android:id="@+id/shop_item_rating"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/padding_xsmall"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_xsmall" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_item_favourits"
            android:src="@drawable/ic_star_enable"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_xsmall"
            android:layout_marginTop="@dimen/padding_xsmall" />

    </RelativeLayout>

</LinearLayout>